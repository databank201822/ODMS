@using ReportViewerForMvc

@{
    ViewBag.Title = "Trade Promotion Details";
}

<div class="row">
    <div class="col-md-12">
 
        <div class="panel panel-primary">
            <div class="panel-heading ">
                <div class="clearfix ">
                  
                    <form action="/ReportDelivery/BulkInvoice" method="POST" target="_blank">
                        Search Option
                        <input type="hidden" name="ids" value="@ViewBag.Momonumber"/>

                        <button type="submit" class="btn btn-warning btn-sm pull-right"> Show Memo</button>
                    </form>
                </div>
            </div>
            <div class="panel-body" style="overflow-x: scroll; min-height: 600px;">
                    
                @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { scrolling = "yes", height = "100%", width = "100%" })
                   
                        
            </div>
        </div>
    </div>
</div>


<style>
   
    iframe {
        border: none;
        min-height: 600px;
    }
</style>

<script>
    $(document).ready(function() {
        $("#ajax_load").show();
    });
    $('iframe').on('load', function () {
        $("#ajax_load").hide();
    });
</script>
