@model IEnumerable<ODMS.Models.RPT_Realtime_TradepromotionDetails_Result>



<div class="panel panel-default">
    <div class="panel-heading">
        <div class="clearfix ">

            Trade promotion
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.REGION_Name)
                    </th>
                    <th style="min-width: 100px;">
                        @Html.DisplayNameFor(model => model.AREA_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CEAREA_Name)
                    </th>
                
                    <th style="min-width: 200px;">
                        @Html.DisplayNameFor(model => model.DB_Name)
                    </th>
                    <th style="min-width: 75px;">
                        @Html.DisplayNameFor(model => model.Cluster)
                    </th>
                   
                    <th>
                        Promotion Name
                    </th>
                    <th>
                        Promotion Description
                    </th>
                    <th style="min-width: 75px;">
                        @Html.DisplayNameFor(model => model.start_date)
                    </th>
                    <th style="min-width: 75px;">
                        @Html.DisplayNameFor(model => model.end_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.is_active)
                    </th>
                  
                </tr>
            </thead>

            <tbody>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.REGION_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AREA_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CEAREA_Name)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.DB_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cluster)
                        </td>
                      <td>
                            @Html.DisplayFor(modelItem => item.Tp_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            @if (item.start_date != null)
                            {
                                @item.start_date.Value.ToString("dd-MM-yyyy")
                            }
                        </td>
                        <td>
                            @if (item.end_date != null)
                            {
                                @item.end_date.Value.ToString("dd-MM-yyyy")
                            }
                        </td>
                        <td>
                            @if (item.is_active == 1)
                            {
                                <span class="label label-primary">Active</span>
                            }
                           
                        </td>
                      
                    </tr>
                }

        </table>
    </div>
</div>
